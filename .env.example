# --- File: .env.example ---

# Absolute path to local media directory
MEDIA_ROOT=/absolute/path/to/media

# Filename or relative path for SpeciesNet output
SPECIESNET_PREDICTIONS=speciesnet_results.json

# PostgreSQL connection string
DB_URL=postgresql://user:pass@localhost:5432/wildlife_db

# Default threshold for speciesnet confidence scoring
DEFAULT_CONFIDENCE_THRESHOLD=0.6

# Environment name (e.g. development, staging, production)
ENV=development
